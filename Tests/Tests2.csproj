using Xunit;
using GithubActionsLab;

public class ProgramTests
{
    public void 1(string x, string y, double expected)
    {
        double result = Program.Add(-4, 5);
        Assert.Equal(1, result);
    }
    public void 2(string x, string y, double expected)
    {
        double result = Program.Subtract(10, 6);
        Assert.Equal(4, result);
    }

    public void 3(string x, string y, double expected)
    {
        double result = Program.Multiply(3,2);
        Assert.Equal(6, result);
    }

    public void 4(string x, string y, double expected)
    {
        double result = Program.Divide(10, 2);
        Assert.Equal(5, result);
    }
    public void 5(string x, string y, double expected)
    {
        double result = Program.Power(4, 2);
        Assert.Equal(16, result);
    }
    public void 6()
    {
        Assert.Throws<System.DivideByZeroException>(() => Program.Divide("10", "0"));
    }
}
